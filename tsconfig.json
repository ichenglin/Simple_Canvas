{
	"compilerOptions": {
		"target":                           "ES6",
		"module":                           "ES6",
		"moduleResolution":                 "node",
		"rootDir":                          "./source",
		"outDir":                           "./build",
		"lib":                              ["ES2016", "DOM"],
		"resolveJsonModule":                true,
		"declaration":                      true,
		"declarationMap":                   false,
		"sourceMap":                        false,
		"removeComments":                   true,
		"esModuleInterop":                  true,
		"forceConsistentCasingInFileNames": true,
		"strict":                           true,
		"skipLibCheck":                     true
	},
	"exclude": ["./build", "./interface"]
}
